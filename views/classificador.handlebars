<form action="/classificador" method="POST" class="p-4 border rounded bg-light">
  <div class="form-group">
    <label for="faturamento">Faturamento Anual (em R$):</label>
    <input type="number" class="form-control" name="faturamento" required>
  </div>
  <div class="form-group">
    <label for="funcionarios">Número de Funcionários:</label>
    <input type="number" class="form-control" name="funcionarios" required>
  </div>
  <div class="form-group">
    <label for="setor">Setor de Atuação:</label>
    <select class="form-control" name="setor" required>
      <option value="">Selecione</option>
      <option value="comercio">Comércio</option>
      <option value="servicos">Serviços</option>
      <option value="industria">Indústria</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary mt-3">Classificar</button>
</form>
